        <li class="select-price-list">
          <div class="select-circle-box">
            <div class="select-circle-inner"></div>
          </div>
          <span>4,000,000원</span>
        </li>
        <li class="select-price-list">
          <div class="select-circle-box">
            <div class="select-circle-inner"></div>
          </div>
          <span>5,000,000원</span>
        </li>
        <li class="select-price-list direct-input">
          <div class="wrapper">
            <div class="select-circle-box">
                <div class="select-circle-inner"></div>
            </div>
            <div class="wrapper-input">
                직접입력
                <input type="number">
                <span>만원</span>
            </div>
          </div>
        </li>
      </ul>
      <button class="black-btn payment" onclick="showModalChargePointSuccessfully()">결제하기</button>
    </div>
  </div>
</div>
</section>

