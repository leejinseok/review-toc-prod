    <h2>결제금액</h2>
    <div class="pay-price">
      <ul class="select-price-wrapper center clearfix">
        <li class="select-price-list">
          <div class="select-circle-box">
            <div class="select-circle-inner"></div>
          </div>
          <span class="align">500,000원</span>
        </li>
        <li class="select-price-list">
          <div class="select-circle-box">
            <div class="select-circle-inner"></div>
          </div>
          <span>1,000,000원</span>
        </li>
        <li class="select-price-list">
          <div class="select-circle-box">
            <div class="select-circle-inner"></div>
          </div>
          <span>2,000,000원</span>
        </li>
        <li class="select-price-list">
          <div class="select-circle-box">
            <div class="select-circle-inner"></div>
