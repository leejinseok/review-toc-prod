<% include ./variables/customerCenter_common.ejs %>
<% include ./variables/customerCenter_faq.ejs %>
<% include ./partials/header.ejs %>
<% include ./partials/nav.ejs %>

<section class="customerCenter faq">
  <div class="container full-width clearfix">
    <h2 class="main-h">고객센터</h2>

    <% include ./partials/customerCenter/menu.ejs %>

    <div class="col content">
      <h2>FAQ</h2>
      <div class="search">
        <div class="options">
          <div class="items">
            <div class="selected">
              <button type="button" class="selected-button">
                <span class="value">대분류</span>
                <img src="./static/images/arrow-down.png">
              </button>
            </div>
            <ul>
              <li class="list-item">분류1</li>
              <li class="list-item">분류2</li>
              <li class="list-item">분류3</li>
            </ul>
          </div>
        </div>
        <div class="options">
          <div class="items">
            <div class="selected">
              <button type="button" class="selected-button">
                <span class="value">분류없음</span>
                <img src="./static/images/arrow-down.png">
              </button>
            </div>
            <ul>
              <li class="list-item">분류1</li>
              <li class="list-item">분류2</li>
              <li class="list-item">분류3</li>
            </ul>
          </div>
        </div>
        <div class="wrapper-search-input">
          <input type="text" class="search-input">
          <img src="./static/images/search.svg" class="icon-search">
        </div>
        <button class="inquiry"> 검색 </button>
      </div>

      <div class="wrapper-table">
        <table cellpadding="0" cellspacing="0">
          <thead>
            <tr>
              <th width="80">번호</th>
              <th>대분류</th>
              <th width="100">소분류</th>
              <th>제목</th>
            </tr>
          </thead>
          <tbody>
            <% for (i = 0; i < 10; i++) { %>
              <% if (i % 2 === 0) { %>
              <tr>
                <td><%= (i + 1)  %></td>
                <td>
                  CPA
                </td>
                <td>
                  프로모션
                </td>
                <td class="subject">
                  Q. 제목 출력이 안됩니다.
                  <img class="arrow-down" alt="arrow-down" data-opened="false" 
                    src="data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 64 64' aria-labelledby='title' aria-describedby='desc' role='img' xmlns:xlink='http://www.w3.org/1999/xlink'%3E%3Ctitle%3EAngle Down%3C/title%3E%3Cdesc%3EA line styled icon from Orion Icon Library.%3C/desc%3E%3Cpath data-name='layer1' fill='none' stroke='%23707070' stroke-miterlimit='10' stroke-width='2' d='M20 26l11.994 14L44 26' stroke-linejoin='round' stroke-linecap='round'%3E%3C/path%3E%3C/svg%3E" />
                </td>
              </tr>
              <% }
              else { %>
                <tr class="reply">
                  <td colspan="4">
                    <div class="wrapper-reply-content">
                      <p>
                        내용
                      </p>
                      <p class="if-not-find">
                         원하시는 정보를 찾지 못하셨나요? 1:1 문의를 남겨주시면, 친절히 안내해 드리겠습니다.
                         <a href="/customerCenter_manToMan.html"><button>1:1 문의하기</button></a>
                      </p>
                    </div>
                  </td>
                </tr>
              <% } %>
            <% } %>
          </tbody>
        </table>
      </div>
      <% include ./partials/customerCenter/pagination.ejs %>
    </div>
  </div>
</section>

<% include ./partials/footer.ejs %>
